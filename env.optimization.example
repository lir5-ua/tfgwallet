# ===========================================
# CONFIGURACIÓN DE OPTIMIZACIÓN - PetWallet
# ===========================================

# ===========================================
# CONFIGURACIÓN BÁSICA
# ===========================================
APP_ENV=production
APP_DEBUG=false
APP_URL=https://tu-dominio.com

# ===========================================
# CACHE Y SESIONES
# ===========================================
CACHE_DRIVER=redis
SESSION_DRIVER=redis
QUEUE_CONNECTION=redis

# ===========================================
# BASE DE DATOS
# ===========================================
DB_CONNECTION=mysql
DB_HOST=127.0.0.1
DB_PORT=3306
DB_DATABASE=petwallet
DB_USERNAME=root
DB_PASSWORD=

# ===========================================
# REDIS
# ===========================================
REDIS_HOST=127.0.0.1
REDIS_PASSWORD=null
REDIS_PORT=6379
REDIS_DB=0
REDIS_CACHE_DB=1

# ===========================================
# OPTIMIZACIONES DE CACHE
# ===========================================
CACHE_ENABLED=true
CACHE_TTL=3600
CACHE_COMPRESS=true
CACHE_PREFIX=petwallet_

# ===========================================
# OPTIMIZACIONES DE BASE DE DATOS
# ===========================================
DB_QUERY_CACHE=true
DB_EAGER_LOADING=true
DB_CONNECTION_LIMIT=10
DB_SLOW_QUERY_LOG=false
DB_SLOW_QUERY_THRESHOLD=1000

# ===========================================
# OPTIMIZACIONES DE IMÁGENES
# ===========================================
IMAGE_COMPRESS=true
IMAGE_QUALITY=85
IMAGE_MAX_WIDTH=1920
IMAGE_MAX_HEIGHT=1080
IMAGE_WEBP_ENABLED=true

# ===========================================
# OPTIMIZACIONES DE ASSETS
# ===========================================
ASSETS_MINIFY=true
ASSETS_COMBINE=true
ASSETS_VERSION=true
ASSETS_CDN_ENABLED=false
ASSETS_CDN_URL=

# ===========================================
# OPTIMIZACIONES DE RENDIMIENTO
# ===========================================
GZIP_ENABLED=true
BROWSER_CACHE=true
HTTP2_ENABLED=true
PRELOAD_CRITICAL=true

# ===========================================
# MONITOREO DE RENDIMIENTO
# ===========================================
PERFORMANCE_MONITORING=true
LOG_SLOW_REQUESTS=true
SLOW_REQUEST_THRESHOLD=2000
MEMORY_LIMIT_WARNING=128

# ===========================================
# MANTENIMIENTO AUTOMÁTICO
# ===========================================
AUTO_CLEAN_LOGS=true
LOG_RETENTION_DAYS=30
AUTO_OPTIMIZE_DB=false
OPTIMIZE_FREQUENCY=weekly

# ===========================================
# LOGGING
# ===========================================
LOG_CHANNEL=stack
LOG_LEVEL=error

# ===========================================
# SEGURIDAD
# ===========================================
SESSION_SECURE_COOKIE=true
SESSION_SAME_SITE=strict 